<!DOCTYPE html>
<html>

{{>head}}

<body>
  {{>nav}}
  <h1 class="lead text-center">Leaderboard</h1>
  <div class="containter">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Team</th>
          <th scope="col">Score</th>
        </tr>
      </thead>
      <tbody>
        {{#each teams as |team|}}
        <tr>
          <th scope="row">{{inc @index}}</th>
          <td>{{team.name}}</td>
          <td>{{team.score}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{>scripts}}
</body>

</html>
